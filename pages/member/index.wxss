/* pages/member/index.wxss */
pull-load{
    background:#333;
}
.ucenter-bg{
    background:linear-gradient(#333333,#f4f4f4);
    padding-top:20rpx;
    color:#805033;
}

.ucenter-bg  .avatar{
    margin-left:20rpx;
}
.ucenter-bg  .avatar .badge{
    right:2rpx;
    top:2rpx;
}
.ucenter-bg  .unlogined{
    overflow:hidden;
}
.ucenter-bg  .avatar-in{
    width:100%;
    height:100%;
}
.ucenter-bg .cardno{
    position: absolute;
    top:20rpx;
    right:20rpx;
}
.loginbtnbox{
    position: relative;
}
.logintip{
    position: absolute;
    white-space: nowrap;
    padding:10rpx 20rpx;
    left:0;
    bottom:-70rpx;
    background:#fff;
    box-shadow:1rpx 1rpx 10rpx rgba(0,0,0,.3);
    border-radius:10rpx;
}
.logintip:before{
    content:"";
    display: block;
    position:absolute;
    left:20%;
    width:0;height:0;
    top:-16rpx;
    border:10rpx solid rgba(0,0,0,0);
    border-bottom-color:#fff;
}