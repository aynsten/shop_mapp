<!--pages/product/index.wxml-->
<view class="container">
    <view class='block lists'>
        <view class='block-content imgbox'>
        <block wx:for="{{cates}}" wx:key="key">
            <view wx:if="{{item.id}}" class='imgitem' data-id="{{item.id}}" bindtap='gotoList'>
                <view wx:if="{{item.img_url}}" class='imgbox'>
                    <image class='sm-picture' src="{{item.img_url}}" mode='aspectFill'></image>
                </view>
                <view class='ttlbox'>
                    <text class='infotitle'>{{item.title}}</text>
                </view>
            </view>
            <view wx:else class='imgitem emptyitem'></view>
            </block>
        </view>
    </view>
</view>