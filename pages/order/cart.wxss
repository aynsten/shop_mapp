/* pages/order/cart.wxss */

.cart-wrap{flex:1;height:50%;}
.cartlist{background:#fff;}
.cart-item{display:flex;flex-direction:row;align-items:center;padding:20rpx;border-bottom:1rpx #e8e8e8 solid;}
.cart-item .picture{width:150rpx;height:150rpx;margin-left:20rpx;}
.cart-item .no_goods_wrap .picture{margin-left:0;}
.cart-item .item-info{flex:1;display:flex;flex-direction: column;margin:0 20rpx;}
.item-info .count::first-letter{font-size:20rpx;}
.cart-item .item-edit{flex:1;display:flex;flex-direction: column;margin:0 20rpx;}
.cart-item .item-del{margin-top:10rpx;color:#9b9b9b;font-size:24rpx;}
.item-edit .input-group{display:flex;flex-direction:row;width:100%;margin:0;}
.input-group input{flex:1;text-align:center;border-top:1rpx #e8e8e8 solid;border-bottom:1rpx #e8e8e8 solid;padding-left:15rpx;min-height:50rpx;height:50rpx;line-height:50rpx;}
.input-group .input-group-addon{background:transparent;border:1px #e8e8e8 solid;width:50rpx;height:50rpx;}

.maskbox{position:fixed;width:100%;height:100%;background:rgba(0,0,0,0);left:100%;top:0;z-index:100;transition:background .5s ease-out;}
.maskopen{left:0; background:rgba(0,0,0,.3);}
.maskclose{left:0;}
.maskbox .panel{position:absolute;background:#fff;top:120%;height:70%;width:100%;transition:top .3s ease-out;display:flex;flex-direction: column;}
 .maskopen .panelopen{top:30%;z-index: 10} 
.panel .pcontent{flex:1;height:50%;margin-bottom:20rpx;overflow: scroll;}
.panel .buttons{width:90%;margin:0 auto;}
.panel .buttons button{width:100%;}
.panel .phead{text-align: center;font-size:32rpx;font-weight:bold;padding:20rpx;}


.item-edit .specedit{
  background:#fff;
  padding:5rpx 10rpx;
  padding-right:46rpx;
  border:1rpx #e8e8e8 solid;
  margin-top:10rpx;
  position: relative;
}
.item-edit .dropspec{width:26rpx;height:16rpx;right:10rpx;top:50%;margin-top:-7rpx;position:absolute;background:transparent;}
.item-info .info-title{margin-bottom:10rpx;font-size: 28rpx;}
.item-info .info-specs{color:#9b9b9b;margin-bottom:10rpx;font-size: 24rpx;}
.editbtn .icon{width:36rpx;height:36rpx;}
.editbtn button{line-height:100rpx;height:100rpx;padding:0 20rpx;}
.cartempty{
  padding-top:100rpx;
  text-align: center;
}
.cartempty view{text-align: center;}
.cartempty .cuIcon-cart{font-size:200rpx !important;color:#aaa;}
.cartempty text{color:#999;}
.cartempty button{margin-top:40rpx;}


.cu-dialog{background:transparent}
.cu-dialog .cu-dialog-content{background-color:#f8f8f8;}
.prod-view-info{display:flex;flex-direction: row;align-items:center;height:120rpx;position: relative}
.prod-view-info .action-close{position: absolute;right:0;top:0;}
.prod-view-info .vimgbox{width:200rpx;height:100rpx;margin:0 20rpx;position: relative}
.prod-view-info .vimgbox image{width:200rpx;height:200rpx;position:absolute;top:-100rpx;left:0;}
.prod-view-info .infobox{flex:1;}
.prod-view-info .infobox .price{font-weight:bold;display:block;}
.prod-view-info .infobox .price::first-letter{font-size:20rpx;font-weight:normal}

.pcontent .speclist{flex:1;}
.specrow{padding:0 20rpx;margin:20rpx 0;}
.specrow .specname{margin-bottom:10rpx;font-size:28rpx;}
.specrow .optionlist{display:flex;flex-direction: row;flex-wrap: wrap;}
.specrow .optionlist .option{margin:0 10rpx 10rpx 0;border-radius:5rpx;padding:10rpx 20rpx;background:#eee;color:#101010;}
.specrow .optionlist .noStorage{color: #9b9b9b;}
.specrow .optionlist .checked{background:#ffa200;color:#fff}
.specrow .optionlist .disabled{color:#aaa;}
.countbox{display:flex;flex-direction: row;padding:10rpx 20rpx;border-top:1rpx #ddd solid;border-bottom:1rpx #ddd solid;}
.countbox>text{flex:1;line-height:2em;}

.panel .phead{text-align: center;font-size:32rpx;font-weight:bold;padding:20rpx;}
.panel .pcontent{flex:1;height:50%;margin-bottom:20rpx;overflow: scroll;padding:20rpx;-webkit-overflow-scrolling: touch;}
.panel .buttons{width:100%;margin:0 auto;text-align:center;}
.panel .buttons button{width:90%;margin:0 auto;border-radius:60rpx;}
.panel .buttons .btngroup{
    width:90%;margin:0 auto;display: flex;
flex-direction: row;
}
.panel .buttons .btngroup button{width:50%;border:#eee solid 1px}
.panel .buttons .btngroup button:first-child{border-radius:60rpx 0 0 60rpx;}
.panel .buttons .btngroup button:last-child{border-radius:0 60rpx 60rpx 0;}

.shop-bottom{position:static;}
.count{
	font-size: 24rpx;
}
.other-price{
	font-size: 28rpx;
	font-weight: 100;
}
.no_goods_wrap{
	position: relative;
}
.no_goods_wrap .no_goods{
	top:0;
	left: 0;
	width: 100%;
	height: 100%;
	position: absolute;
	background: rgba(0,0,0,.2);
	text-align: center;
	color:white;
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	border-radius: 50%;
}