<!--pages/news/detail.wxml-->
<view class='container'>
    <view class='title'>{{model.title}}</view>
    <view class='model-info'>
        <text>发布时间：{{model.add_time}}</text>
        <text>浏览量：{{model.click}}</text>
    </view>
    <view class='description' wx:if="{{model.zhaiyao}}">
    <text>阅读摘要：</text>
    {{model.zhaiyao}}
    </view>
    <view class='content'>
        <rich-text nodes="{{model.content}}"></rich-text>
    </view>
    <view class='buttons'>
        <view class='flex'><text decode='true'>&emsp;</text></view>
        <button open-type='share'>分享</button>
        <button bindtap='diggUp'>({{model.diggup}})点赞</button>
    </view>
</view>
