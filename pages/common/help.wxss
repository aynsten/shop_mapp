/* pages/common/help.wxss */

page, .main-container {
    height: 100%;
    background: #fff;
    display: flex;
    flex-direction: column;
}

.help-head {
    text-align: center;
    margin: 20rpx 0;
    padding: 20rpx 0;
    font-size: 32rpx;
    border-bottom: 1rpx #f0f0f2 solid;
    font-weight: bold;
}

.help-content {
    flex-grow: 1;
    padding: 40rpx;
    font-size: 28rpx;
    height: 50%;
    overflow: scroll;
}

.help-content .p {
    text-indent: 2em;
    margin: 10rpx 0;
}

.help-content .noindent {
    text-indent: 0;
}

button {
    border: 0;
    background: #e9e9e9;
    color: #101010;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    width: 100%;
    border-radius: 0;
}

.buttons {
    display: flex;
    flex-direction: row;
}

.buttons button {
    width: 20%;
    flex: 1;
}
