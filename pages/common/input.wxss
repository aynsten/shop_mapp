/* pages/common/input.wxss */
page{
  background:#fff;
}
.container{
  background: #f0f0f2;
}
.inputbox{
  /*height:500rpx;*/
  padding-bottom:100rpx;
  position:relative;
}
.placeholder{
  position:absolute;
  width:100%;
  text-align:center;
  line-height:100rpx;
  font-size:36rpx;
  color:#e9e9e9;
  top:124rpx;
  left:0;
}
.singleText{
  margin:0 20rpx;
  margin-top:124rpx;
  border-top:1rpx #e9e9e9 solid;
  border-bottom:1rpx #e9e9e9 solid;
  text-align: center;
  font-size:36rpx;
  line-height:100rpx;
  height:100rpx;
}

.inputwrap{
  margin:0 20rpx;
  margin-top:124rpx;
  border-top:1rpx #e9e9e9 solid;
  border-bottom:1rpx #e9e9e9 solid;
  height:100rpx;
  display:flex;
  flex-direction: row;
}
.inputwrap input{
  flex-grow: 1;
  font-size:36rpx;
  line-height:100rpx;
  height:100rpx;
  text-align:right;
  padding-right:10rpx;
}
.inputwrap text{
  flex-grow: 1;
  font-size:36rpx;
  line-height:100rpx;
  height:100rpx;
  text-align:left;
  width:50%;
}

.tips{
  margin:28rpx 20rpx;
  color:#9b9b9b;
  font-size:24rpx;
}
.tips text{
  display:block;
  font-size:24rpx;
}

.links{
  margin-top:74rpx;
}
.links .icon{
  width:28rpx;
  height:28rpx;
  background-color:transparent;
}